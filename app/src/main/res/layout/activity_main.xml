<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operaciones matematicas"
        android:textSize="25sp"
        android:textStyle="bold"
       />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/txtnumero1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero 1"
                    android:layout_margin="5dp"
                    android:inputType="numberDecimal"
                    />
                <EditText
                    android:id="@+id/txtnumero2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero 2"
                    android:layout_margin="5dp"
                    android:inputType="numberDecimal"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnsumar"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:text="+"
                        android:textColor="@color/text_boton"
                        android:layout_margin="5dp"
                        android:background="@drawable/efecto_boton"
                        />

                    <Button
                        android:id="@+id/btnrestar"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:text="-"
                        android:textColor="@color/text_boton"
                        android:layout_margin="5dp"
                        android:background="@drawable/efecto_boton"
                        />

                    <Button
                        android:id="@+id/btnmultiplicar"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:text="*"
                        android:textColor="@color/text_boton"
                        android:layout_margin="5dp"
                        android:background="@drawable/efecto_boton"
                        />

                    <Button
                        android:id="@+id/btndividir"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:text="/"
                        android:textColor="@color/text_boton"
                        android:layout_margin="5dp"
                        android:background="@drawable/efecto_boton"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="El resultado es:  "
                        />
                    <TextView
                        android:id="@+id/txvresultado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>